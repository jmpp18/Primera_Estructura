---
interface Props {
	title: string;
}

const { title } = Astro.props;

const products = [
	{
		icon: "",
		name: "Producto 1",
	},
	{
		icon: "",
		name: "Producto 2",
	},
	{
		icon: "",
		name: "Producto 3",
	}
]
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<div class="header">
			<div class="container header_info">
				Contenido de cabezera
			</div>
		</div>
		<div class="container banner">
			H
		</div>
		<nav class="container main_menu">
			<a href="">Inicio</a> <a href="/productos">Productos</a>
		</nav>
		<div class="container product_list">
			{
				products.map((product) =>  <div>
				<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: rgba(0, 0, 0, 1);transform: ;msFilter:;"><path d="M12 2C7.51 2 4 4.2 4 7v10c0 2.8 3.51 5 8 5s8-2.2 8-5V7c0-2.8-3.51-5-8-5zm0 18c-3.54 0-6-1.58-6-3v-6.67A10.52 10.52 0 0 0 12 12a10.52 10.52 0 0 0 6-1.67V17c0 1.42-2.46 3-6 3zm0-10c-3.54 0-6-1.58-6-3s2.46-3 6-3 6 1.58 6 3-2.46 3-6 3z"></path><ellipse cx="12" cy="7" rx="3" ry="1.71"></ellipse></svg>
				{product.name}
			</div>)
			}
		</div>
		
		<div class="container buttons">
			<a href="" class="buttonWithImage">
				<img src="https://cf.shopee.com.co/file/co-50009109-88f9f3065be0c345e2339e41b8f3b8d0_xxhdpi" id="imageOfButton" alt="">
				<p>Hola</p>
			</a>
			<a href="" class="buttonWithImage">
				<img src="https://cf.shopee.com.co/file/co-50009109-88f9f3065be0c345e2339e41b8f3b8d0_xxhdpi" id="imageOfButton" alt="">
				<p>Hola</p>
			</a>
			<a href="" class="buttonWithImage">
				<img src="https://cf.shopee.com.co/file/co-50009109-88f9f3065be0c345e2339e41b8f3b8d0_xxhdpi" id="imageOfButton" alt="">
				<p>Hola</p>
			</a>
		</div>
		<slot />
	</body>
</html>
<style is:global>
	.main_menu {
		display: flex;
		align-items: center;
		height: 40px;
		background-color: rgb(238, 77, 45);
	}
	.product_list {
		display: flex;			
		height: 80px;
	}
	.product_list div {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		height: 100%;
		max-width: 120px;
		text-align: center;
		background-color: white;
		border: 1px solid gray;
		border-radius: 4px;
	}
	.product_list div:hover {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		height: 100%;
		max-width: 120px;
		text-align: center;
		border: 1px solid gray;
		filter: invert();
		transition: 0.2s;
		border-radius: 4px;
	}
	.main_menu a {
		height: 100%;
		padding: 0 10px;
		display: flex;		
		transition: background 200ms ease-in-out;
		align-items: center;
		text-decoration: none;
		color: white;
	}
	a {
		text-decoration: none;
	}
	.main_menu a:hover {
		background-color: rgb(255, 112, 83);
		transition: 0.2s;
	}
	.buttonWithImage {
        display: flex;
		flex-direction: column;
		align-items: center;
    }
    #imageOfButton {
        max-width: 50px;
        max-height: 50px;
    }
	.header {
		background-color: orange;
	}
	.header_info {
		height: 120px;
	}
	.banner {
		height: 240px;
	}
	.container {
		max-width: 1280px;
		/* background-color: rgb(85, 85, 172); */
		margin: 0 auto;
	}
	.buttons {		
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 40px;
	}
	html, body {
		margin: 0;
		padding: 0;
		font-family: system-ui, sans-serif;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
